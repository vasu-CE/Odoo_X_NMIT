{
  "name": "manufacturing-erp-backend",
  "version": "1.0.0",
  "description": "Manufacturing ERP Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "prisma generate",
